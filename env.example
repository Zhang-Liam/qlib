# Qlib Production Trading Environment Variables
# Copy this file to .env and fill in your actual values

# Broker Configuration
BROKER_TYPE=alpaca  # Options: alpaca, ibkr, mock
PAPER_TRADING=true

# Interactive Brokers (if using IBKR)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=your_ibkr_account

# Alpaca Markets (if using Alpaca)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Data Provider Configuration
DATA_PROVIDER=mock  # Options: mock, alpaca, ibkr, polygon
DATA_API_KEY=your_data_api_key

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=5000
MAX_SECTOR_EXPOSURE=0.3
MAX_SINGLE_STOCK_EXPOSURE=0.1

# Monitoring and Alerts
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Database (optional)
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Trading Configuration
ENABLE_TRADING=false  # Set to true for live trading
TRADING_SYMBOLS=AAPL,GOOGL,MSFT,SPY,QQQ 